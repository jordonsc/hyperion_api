{% extends '::admin.html.twig' %}
{% import '::macros/admin.html.twig' as admin %}
{% block body %}
    <div class="container">
        {{ admin.breadcrumb(account.name, null) }}
        {{ admin.accountDetail(account) }}

        {{ form(form) }}
    </div>
    <div class="fk-1" style="margin-top: 30px">
        <div class="container">
            <div class="row">
                <h2>Projects</h2>

                <div class="row">
                    {{ admin.listProjects(account.projects) }}
                </div>

                <p><a href="{{ path('admin_project', {'id': 'new:' ~ account.id}) }}" class="btn btn-sm btn-primary">
                        <span class="glyphicon glyphicon-plus-sign"></span> New Project</a></p>
            </div>
        </div>
    </div>
    <div class="fk-2">
        <div class="container">
            <div class="row">
                <h2>Repositories</h2>

                <div class="row">
                    {{ admin.listRepositories(account.repos) }}
                </div>

                <div class="btn-group">
                    <a href="#" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> New
                        Repository</a>
                </div>
            </div>
        </div>
    </div>
    <div class="fk-3">
        <div class="container">
            <div class="row">
                <h2>Credentials</h2>

                <div class="row">
                    {{ admin.listCredentials(account.credentials) }}
                </div>
                <div class="btn-group">
                    <a href="#" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> New
                        Credential</a>
                </div>
            </div>
        </div>
    </div>
    <div class="fk-4">
        <div class="container">
            <div class="row">
                <h2>Proxy Servers</h2>

                <div class="row">
                    {{ admin.listProxies(account.proxies) }}
                </div>
                <div class="btn-group">
                    <a href="#" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> New
                        Proxy
                        Config</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}