{% extends '::admin.html.twig' %}
{% import '::macros/admin.html.twig' as admin %}
{% block body %}
    <div class="container">
        {{ admin.breadcrumb(proxy.name  ? : 'New Proxy Server', proxy.account) }}
        <h1>{{ proxy.name ? : 'New Proxy Server' }}</h1>

        {% if proxy.id %}

        {% endif %}

        {{ form(form) }}
    </div>

    {% if proxy.id %}
        <div class="container" style="margin-top: 30px">
            <p><a href="{{ path('admin_proxy_delete', {'id': proxy.id}) }}" class="btn btn-xs btn-danger"
                  onclick="return confirm('Are you sure you want to delete this proxy?')">
                    <span class="glyphicon glyphicon-fire"></span> Delete Proxy</a></p>
        </div>
    {% endif %}
{% endblock %}