{% extends 'HyperionApiBundle::hyperion.html.twig' %}
{% block body %}
    <div class="container">
        <div id="activity-alerts"></div>
        <h1>Activity</h1>

        <div class="progress" id="act-progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="20"
                 aria-valuemin="0" aria-valuemax="100" style="width: 20%">
            </div>
        </div>
    </div>

    <div id="activity">
        <div class="container">
            <h2>Active Processes</h2>

            <div id="active"></div>
        </div>
        <div class="container">
            <h2>Completed Processes</h2>

            <div id="closed"></div>
        </div>
    </div>

    <div class="modal fade" id="outputDialogue" tabindex="-1" role="dialog" aria-labelledby="outputDialogueTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="outputDialogueTitle">Activity Output</h4>
                </div>
                <div class="modal-body" id="outputDialogueBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="engine.getActivity().refreshOutput()">Refresh</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}