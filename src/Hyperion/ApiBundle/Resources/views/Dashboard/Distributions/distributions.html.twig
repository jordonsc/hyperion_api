{% extends 'HyperionApiBundle::hyperion.html.twig' %}
{% block body %}
    <div class="container">
        <div id="distribution-alerts"></div>
        <h1>Distributions</h1>

        <div class="progress" id="distro-progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="20"
                 aria-valuemin="0" aria-valuemax="100" style="width: 20%">
            </div>
        </div>
    </div>

    <div id="distributions">
        <div class="container">
            <h2>Active Distributions</h2>

            <div id="active"></div>
        </div>
        <div class="container">
            <h2>Closed Distributions</h2>

            <div id="closed"></div>
        </div>
    </div>

    <div class="modal fade" id="rebuildDialogue" tabindex="-1" role="dialog" aria-labelledby="rebuildDialogueTitle"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span
                            aria-hidden="true">&times;</span><span
                            class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="rebuildDialogueTitle">Rebuild Confirmation</h4>
                </div>
                <div class="modal-body" id="rebuildDialogueBody">
                    <p>Rebuild this distribution?</p>

                    <p>Any other active build of this distribution will be frozen and torn down once complete.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="engine.getDistributions().rebuild()">
                        Rebuild
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="tearDownDialogue" tabindex="-1" role="dialog" aria-labelledby="tearDownDialogueTitle"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span
                            aria-hidden="true">&times;</span><span
                            class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="tearDownDialogueTitle">Tear-down Confirmation</h4>
                </div>
                <div class="modal-body" id="tearDownDialogueBody">
                    <div class="alert alert-danger"><b>Warning!</b> This action will take this build offline!</div>
                    <p>Are you sure you want to completely terminate all instances in this distribution?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="engine.getDistributions().tearDown()">Tear
                        down
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}